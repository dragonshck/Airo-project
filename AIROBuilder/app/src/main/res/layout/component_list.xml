<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_thumbnail_component"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        android:transitionName="thumbnail"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/poppins_bold"
        android:layout_toEndOf="@id/iv_thumbnail_component"
        android:textSize="14sp"
        android:textStyle="bold"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toEndOf="@+id/iv_thumbnail_component"
        card_view:layout_constraintTop_toTopOf="@id/iv_thumbnail_component"
        android:transitionName="name"
        android:maxLines="1"
        tools:text="Nama Komponen" />

    <TextView
        android:id="@+id/tv_brand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/poppins"
        android:ellipsize="end"
        android:maxLines="5"
        android:textSize="12sp"
        card_view:layout_constraintBottom_toBottomOf="@+id/iv_thumbnail_component"
        card_view:layout_constraintEnd_toEndOf="@id/tv_name"
        card_view:layout_constraintStart_toStartOf="@id/tv_name"
        card_view:layout_constraintTop_toBottomOf="@id/tv_name"
        card_view:layout_constraintVertical_bias="0.0"
        android:transitionName="brand"
        tools:text="Brand"/>

    <TextView
        android:id="@+id/tv_model"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintTop_toBottomOf="@id/tv_name"
        card_view:layout_constraintBottom_toBottomOf="parent"
        tools:text="Ram" />


</androidx.constraintlayout.widget.ConstraintLayout>